<form action="/books/edit/{{book._id}}" method="post">

  <label for="title">Title: </label>
  <input type="text" name="title" id="title" value="{{book.title}}" />

  <label for="author">Author: </label>
  <input type="text" name="author" id="author" value="{{book.author.firstName}} {{book.author.lastName}}" />

  <label for="description">Summary: </label>
  <input type="text" name="description" id="description" value="{{book.description}}">

  <label for="rating">Rate: </label>
  <input type="number" name="rating" id="rating" value={{book.rating}} />

  <button type="submit">Edit a Book</button>

</form>